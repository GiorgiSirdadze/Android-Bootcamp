<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/paymentFragment">

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.homeworks.Fragments.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_addCardFragment"
            app:destination="@id/addCardFragment" />
        <action
            android:id="@+id/action_paymentFragment_to_bottomSheetFragment2"
            app:destination="@id/bottomSheetFragment2">
            <argument
                android:name="cardId"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/addCardFragment"
        android:name="com.example.homeworks.Fragments.AddCardFragment"
        android:label="fragment_add_card"
        tools:layout="@layout/fragment_add_card" >
        <action
            android:id="@+id/action_addCardFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <dialog
        android:id="@+id/bottomSheetFragment2"
        android:name="com.example.homeworks.Fragments.BottomSheetFragment"
        android:label="BottomSheetFragment" />
</navigation>