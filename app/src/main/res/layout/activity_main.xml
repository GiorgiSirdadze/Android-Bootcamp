<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/fieldsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundImage">

        <TextView
            android:id="@+id/activeUser"
            android:layout_width="151dp"
            android:layout_height="41dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:textColor="#050505"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/removedUser"
            android:layout_width="151dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:textColor="#050505"
            android:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fieldsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254">

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext"
            android:hint="@string/first_name"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#121212"
            android:textColorHint="#121212"
            android:textSize="16sp"
            tools:ignore="Autofill,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/firstNameError"
            android:layout_width="373dp"
            android:layout_height="16dp"
            android:autoSizeTextType="uniform"
            android:textColor="#F00707" />


        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext"
            android:hint="@string/last_name"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#121212"
            android:textColorHint="#121212"
            android:textSize="16sp"
            tools:ignore="Autofill,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/lastNameError"
            android:layout_width="373dp"
            android:layout_height="16dp"
            android:autoSizeTextType="uniform"
            android:textColor="#F00707" />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext"
            android:hint="@string/age"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#121212"
            android:textColorHint="#121212"
            android:textSize="16sp"
            tools:ignore="Autofill,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/ageError"
            android:layout_width="373dp"
            android:layout_height="16dp"
            android:autoSizeTextType="uniform"
            android:textColor="#F00707" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#121212"
            android:textColorHint="#121212"
            android:textSize="16sp"
            tools:ignore="Autofill,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/emailError"
            android:layout_width="373dp"
            android:layout_height="16dp"
            android:autoSizeTextType="uniform"
            android:textColor="#F00707" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fieldsContainer">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addUserButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#0B0B0B"
            android:padding="12dp"
            android:text="@string/add_user"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/removeUserButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#0B0B0B"
            android:padding="12dp"
            android:text="@string/remove_user"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateUserButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0B0B0B"
            android:padding="12dp"
            android:text="@string/update_user"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:autoSizeTextType="uniform"
        android:textColor="#101010"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>